<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/room_ready_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="55dp"
        android:background="@color/yellow"
        android:text="준비"/>
    <Button
        android:id="@+id/room_ready_cancel_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="55dp"
        android:background="@color/yellow"
        android:visibility="invisible"
        android:text="준비취소"/>
    <Button
        android:id="@+id/room_pay_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/white"
        android:background="@color/blue_primary"
        android:visibility="invisible"
        android:text="결제" />

    <Button
        android:id="@+id/verify_button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="55dp"
        android:textColor="@color/white"
        android:background="@color/blue_primary"
        android:visibility="invisible"
        android:text="검" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="가게 이름"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="@color/light_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="8"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/room_minimum_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="최소주문금액"/>
                <TextView
                    android:id="@+id/room_delivery_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배달팁"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/room_platform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용플랫폼"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/room_delivery_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="배달장소"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/room_delivery_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약속시간"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_text"
            android:padding="5dp"
            android:stretchColumns="0,1,2,3">
        <TableRow>
        <ImageView
            android:id="@+id/room_my_status"
            android:layout_width="5dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:src="@drawable/circle"
            android:backgroundTint="@color/red"
            />
        <TextView
            android:id="@+id/room_my_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:src="@drawable/user"
            />
        <EditText
            android:id="@+id/room_my_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="싸이버거 세트"
            android:textAlignment="center"
            android:background="@drawable/bg_room_list"
            android:padding="5dp"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            android:layout_weight="5"
            />

        <EditText
            android:id="@+id/room_my_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:padding="5dp"
            android:background="@drawable/bg_room_list"
            android:text="0"
            android:textSize="13dp"
            android:layout_marginRight="10dp"
            android:inputType="number"
            android:layout_weight="2"/>
        </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/room_people_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/white"
            android:dividerHeight="2dp"
            tools:listitem="@layout/activity_people_list"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginBottom="110dp">
            <!--채팅-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ListView
                    android:id="@+id/room_chat_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="0dp"
                    android:divider="@android:color/transparent"/>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:background="@color/blue_primary"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <EditText
            android:id="@+id/room_chat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:layout_weight="5"
            android:background="@drawable/bg_text"
            android:layout_marginLeft="10dp"/>
        <ImageButton
            android:id="@+id/room_chat_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_send"/>
    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/qr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_line"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="120dp"
        android:text="QR코드"
        android:textSize="11dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/qr_scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_blue_line"
        android:padding="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="160dp"
        android:text="QR스캔"
        android:textSize="11dp"
        android:layout_alignParentRight="true"/>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:menu="@menu/menu_bottomnavigationview"
        />
</RelativeLayout>
