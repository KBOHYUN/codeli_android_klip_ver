<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/pay_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="음식 가격 + 배달팁"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/pay_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="총 금액"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/klay"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"/>
        <TextView
            android:id="@+id/pay_total_price_klay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="클레이 총 금액"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/pay_klay_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1클레이 금액"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/pay_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="@color/dark_blue"
        android:text="결제하기"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_margin="40dp"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/result_button"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="@color/yellow_primary"
        android:text="닫기"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_margin="40dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"/>

</RelativeLayout>